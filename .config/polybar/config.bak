[colors]
background = #8559a5
background-alt = #a55999
foreground = #e5e5e5
foreground-alt = #424242
primary = #560088
secondary = #e60053
alert = #e83b3f

[bar/bspwm-bar]
width = 100%
height = 28
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #f00
padding = 1
module-margin = 1
font-0 = Operator Mono:pixelsize=10;0
font-1 = Font Awesome 5 Free:pixelsize=11;0
font-2 = Font Awesome 5 Free Solid:pixelsize=11;0
font-3 = Font Awesome 5 Brands:pixelsize=11;0
font-4 = Noto Sans CJK JP:size=10;0
# bspwm module font awesome (bigger)
font-5 = Font Awesome 5 Brands:pixelsize=12;0
modules-left = bspwm
modules-center = mpd
modules-right = pulseaudio xkeyboard memory cpu date
tray-position = right
wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize

[module/xkeyboard]
type = internal/xkeyboard
;blacklist-0 = num lock
format-prefix = " " 
format-prefix-foreground = ${colors.foreground}
label-layout = %layout%

[module/bspwm]
type = internal/bspwm
lbl = %{T4} %icon% %{T-}
padding = 1px
margin = 0.5px
label-focused = ${self.lbl}
label-focused-underline = ${colors.primary}
label-focused-margin = ${self.margin}
label-focused-padding = ${self.padding}
label-occupied = ${self.lbl}
label-occupied-padding = ${self.padding}
label-occupied-margin = ${self.margin}
label-urgent = ${self.lbl}
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.padding}  
label-urgent-margin = ${self.margin}
label-empty = ${self.lbl}
label-empty-foreground = ${colors.foreground}
label-empty-padding = ${self.padding}
label-empty-margin = ${self.margin}
;bspwm icons
ws-icon-0 = term; 
ws-icon-1 = www; 
ws-icon-2 = chat; 
ws-icon-3 = dev; 
ws-icon-4 = play; 
ws-icon-5 = watch; 
ws-icon-6 = listen; 
ws-icon-7 = work; 

[module/mpd]
type = internal/mpd
format-online-prefix = " " 
format-online = <label-song> | <label-time> | (<icon-prev> <icon-stop> <toggle> <icon-next>)
format-stopped =
icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
label-song-maxlen = 100
label-song-ellipsis = true
bar-progress-width = 20
bar-progress-indicator = -
bar-progress-fill = 
bar-progress-empty = 

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = ""
label = %percentage:  2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5
date = " %Y-%m-%d"
time = %I:%M %p
format-prefix =  
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume =  %percentage%%
label-muted =  Muted
label-muted-foreground = ${colors.foreground-alt}

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
